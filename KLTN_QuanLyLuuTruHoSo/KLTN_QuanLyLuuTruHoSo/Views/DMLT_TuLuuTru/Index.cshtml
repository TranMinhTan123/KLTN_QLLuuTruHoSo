@model IEnumerable<KLTN_QuanLyLuuTruHoSo.Models.TU>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    var stt = 0;
}
<link href="~/Template/css/css-list-btn.css" rel="stylesheet" />
<div class="css-inp">
    <span>QUẢN LÝ TỦ LƯU TRỮ</span>
</div>
<div class="container css-list-ql">
    <div style="width:100%; height:100%">
        <div class="row">
            <div class="col-md-3" style=" padding-top: 2%; padding-bottom: 2%; display:flex">
                @Html.ActionLink("THÊM TỦ HỒ SƠ", "ThemTu", null, new { @class = "css-ins" })
            </div>
            <div class="col-md-9" style=" padding-top: 2%;">
                @Html.Action("TimKiemTu", "DMLT_TuLuuTru")
                <span style="color: #877575; margin-left: 2%; font-style: italic; ">Tìm kiếm theo tên tủ hồ sơ</span>
            </div>
        </div>
        <div class="row">
            <div style="overflow:auto" class="col-md-10">
                <table class="table table-bordered table-striped table-responsive-stack table-hover " style="font-family: auto; text-align: center; ">
                    <tr style=" background-color: #398B93; color: white;">
                        <th>
                            STT
                        </th>
                        <th>
                            TÊN TỦ
                        </th>
                        <th>
                            SỐ NGĂN
                        </th>
                        <th>
                            SỐ KỆ ĐẶT
                        </th>
                        <th>
                            SỐ KỆ HIỆN TẠI
                        </th>
                        <th>
                            NGÀY TẠO
                        </th>
                        <th>
                            NGÀY CẬP NHẬT
                        </th>
                        <th>
                            TRẠNG THÁI
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        stt++;
                        <tr>
                            <td> @stt</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TENTU)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SONGAN)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SLKE_DAT)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SLKE_HT)
                                @Html.ActionLink("Sửa", "SuaTu", new { id = item.ID }, new { @class = "btn btn-danger", style = "opacity: 0; pointer-events: none; width: 0px; margin-right: -18%;" })
                            </td>
                            <td>
                                @item.NGAYTAO.Value.ToString("dd - MM - yyyy")
                            </td>
                            <td>
                                @item.NGAYCAPNHAT.Value.ToString("dd - MM - yyyy")
                            </td>
                            <td>
                                @if (item.TRANGTHAI == true)
                                {
                                    <span style=" background-color: #43d625; border-radius: 27px; color: white; padding: 3px 15px;">Hoạt động</span>
                                }
                                else
                                {
                                    <span style="background-color: #db1b1b; border-radius: 27px; color: white; padding: 3px 15px; ">Không hoạt động</span>
                                }
                        </tr>
                    }
                </table>

            </div>
            <div class="col-md-2">
                <table class="table table-bordered table-striped table-responsive-stack table-hover " style="font-family: auto; text-align: center; ">
                    <tr style=" background-color: #398B93; color: white;">
                        <th>
                            CHỨC NĂNG
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink("Sửa", "SuaTu", new { id = item.ID }, new { @class = "btn btn-success" })
                                @Html.ActionLink("Xóa", "XoaTu", new { id = item.ID }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>


