@model IEnumerable<KLTN_QuanLyLuuTruHoSo.Models.TAILIEU>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
    var stt = 0;
}

<link href="~/Template/css/css-list-btn.css" rel="stylesheet" />

<div class="css-inp">
    <span>QUẢN LÝ TÀI LIỆU LƯU TRỮ</span>
</div>
<div class="container css-list-ql">
    <div style="width:100%;height:100%">
        <div class="row">
            <div class="col-md-3" style=" padding-top: 2%; padding-bottom: 2%; display:flex">
                @Html.ActionLink("THÊM TÀI LIỆU", "ThemTaiLieu", null, new { @class = "css-ins" })
            </div>
            <div class="col-md-9" style=" padding-top: 2%;">
                @*@Html.Action("TimKiemTaiLieu", "DMLT_TaiLieu")*@
                <span style="color: #877575; margin-left: 2%; font-style: italic; ">Tìm kiếm theo tên tài liệu</span>
            </div>
        </div>
        <div class="row">
            <div style="overflow:auto" class="col-md-10">
                <table class="table table-bordered table-striped table-responsive-stack table-hover" style="font-family: auto; text-align: center; ">
                    <tr style=" background-color: #398B93; color: white;">
                        <th>STT</th>
                        <th>
                            HỒ SƠ
                        </th>
                        <th>
                            TÊN TÀI LIỆU
                        </th>
                        <th>
                            DẠNG VB
                        </th>
                        <th>
                            TÌNH TRẠNG
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        stt++;
                        <tr>
                            <td>
                                 @stt
                                @Html.ActionLink("Sửa", "SuaTu", new { id = item.ID }, new { @class = "btn btn-danger", style = "opacity: 0;    pointer-events: none;width: 0px; margin-right: -18%;" })
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HOSO.TENHOSO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TENTL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DANG)
                            </td>
                           
                            <td>
                                @if (item.TRANGTHAI == true)
                                {
                                    <span style=" background-color: #43d625; border-radius: 27px; color: white; padding: 3px 15px;">Hoạt động</span>
                                }
                                else
                                {
                                    <span style="background-color: #db1b1b; border-radius: 27px; color: white; padding: 3px 15px; ">Không hoạt động</span>
                                }
                            </td>
                        </tr>
                    }

                </table>
            </div>
            <div class="col-md-2">
                <table class="table table-bordered table-striped table-responsive-stack table-hover " style="font-family: auto; text-align: center; ">
                    <tr style=" background-color: #398B93; color: white;">
                        <th>
                            CHỨC NĂNG
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        @*<tr>
                            <td>
                                <div class="nav navbar">
                                    <div class="dropdown">
                                        <a class="nav-link dropdown-toggle" id="dsct" data-toggle="dropdown" href="#" style=" border-radius: 5px; background-color: #0094ff; color: white; font-weight: bold;">
                                            
                                            <div class="dropdown-menu" aria-labelledby="dstl" style="position: relative;left: -100%;">
                                                @Html.Action("ChiTietTaiLieu", "QLLT_TaiLieu", new { id = @item.ID })
                                            </div>
                                        </a>
                                    </div>
                                    @Html.ActionLink("Sửa", "SuaTaiLieu", new { id = item.ID }, new { @class = "btn btn-success" })
                                    @Html.ActionLink("Xóa", "XoaTaiLieu", new { id = item.ID }, new { @class = "btn btn-danger" })
                                </div>
                            </td>
                        </tr>*@
                        <tr>
                            <td>
                                <!-- Button trigger modal -->
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                                    CT
                                </button>
                                @Html.ActionLink("Sửa", "SuaTaiLieu", new { id = item.ID }, new { @class = "btn btn-success" })
                                @Html.ActionLink("Xóa", "XoaTaiLieu", new { id = item.ID }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">CHI TIẾT TÀI LIỆU</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table">
                    <tr>
                        <td>ID</td>
                        <td>Hồ Sơ</td>
                        <td>Nơi Ban Hành</td>
                        <td>Tên TL</td>
                        <td>Loại TL</td>
                        <td>Số tờ</td>
                        <td>Dạng</td>
                        <td>Người gửi</td>
                        <td>Người nhận</td>
                        <td>Người ký</td>
                        <td>Người duyệt</td>
                        <td>Ngày ban hành</td>
                        <td>Nội dung</td>
                        <td>Hình ảnh</td>
                        <td>Đường dẫn</td>
                        <td>Tình trạng</td>
                        <td>Trạng thái</td>
                        <td>Ngày tạo</td>
                        <td>Ngày cập nhật</td>
                        <td>Ghi chú</td>
                    </tr>
                    @foreach (var tl in Model)
                    {
                        <tr>
                            <td>@tl.ID</td>
                            <td>@tl.HOSO.TENHOSO</td>
                            <td>@tl.NOIBANHANH.TENNBH</td>
                            <td>@tl.TENTL</td>
                            <td>@tl.LOAITL</td>
                            <td>@tl.SOTO</td>
                            <td>@tl.DANG</td>
                            <td>@tl.NGUOIGUI</td>
                            <td>@tl.NGUOINHAN</td>
                            <td>@tl.NGUOIKY</td>
                            <td>@tl.NGUOIDUYET</td>
                            <td>@tl.NGAYBANHANH</td>
                            <td>@tl.NOIDUNG</td>
                            <td>@tl.HINHANH</td>
                            <td>@tl.DUONGDAN</td>
                            <td>@tl.TINHTRANG</td>
                            <td>@tl.TRANGTHAI</td>
                            <td>@tl.NGAYTAO</td>
                            <td>@tl.NGAYCAPNHAT</td>
                            <td>@tl.GHICHU</td>
                        </tr>
                    }
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                @*<button type="button" class="btn btn-primary">Save changes</button>*@
            </div>
        </div>
    </div>
</div>
