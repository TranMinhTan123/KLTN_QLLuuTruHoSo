@model KLTN_QuanLyLuuTruHoSo.Models.KE

@{
    ViewBag.Title = "ThemKe";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<link href="~/Template/css/css-list-btn.css" rel="stylesheet" />

<div class="container">
    <div style="text-align:center">
        <<h3>THÊM KỆ LƯU TRỮ</h3>
    </div>
    <div style="padding-bottom:1%">
        @Html.ActionLink("< BACK", "Index", null, new { @class = "css-back" })
    </div>

    <div>
        @Html.ActionLink("BACK", "Index", new { @class = "css-ins" })
    </div>
    @using (Html.BeginForm("XuLyThemKe", "DMLT_KeGia", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <table class="table table-striped">
                <tr>
                    <td style="font-weight: 700;">
                        TÊN TỦ
                    </td>
                    <td>
                        @Html.DropDownList("ID_TU", null, new { @class = "form-control" })
                    </td>
                    <td style="font-weight: 700;">
                        TÊN KỆ
                    </td>
                    <td style="font-weight: 700;">
                        @Html.TextBoxFor(model => model.TENKE, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TENKE)
                    </td>
                </tr>
                <tr>
                    <td style="font-weight: 700;">
                        SỐ HỌP ĐẶT
                    </td>
                    <td>
                        @Html.EditorFor(model => model.SLHOP_DAT, new { htmlAttributes = new { @class="form-control" } })
                        @Html.ValidationMessageFor(model => model.SLHOP_DAT)
                    </td>
                    <td style="font-weight: 700;">
                        NGÀY KẾT THÚC
                    </td>
                    <td>
                        <input type="date" name="dtNgayKT" class="form-control">
                    </td>
                </tr>
                <tr>
                    <td style="font-weight: 700;">TRẠNG THÁI</td>
                    <td >
                        @Html.RadioButtonFor(model => model.TRANGTHAI, "true") Hoạt động
                        @Html.RadioButtonFor(model => model.TRANGTHAI, "false") Không hoạt động
                    </td>
                    <td>
                        <input type="submit" id="submit1" value="Thêm" class="btn btn-danger " />
                    </td>
                </tr>
            </table>
        </fieldset>
    }
</div>


